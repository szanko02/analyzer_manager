<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.size.SizeFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWidth"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4A673AB7"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <TextView
                android:id="@+id/text_change_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type width of your matrix"
                android:textAlignment="center"
                android:textSize="40sp"
                app:layout_constraintBottom_toTopOf="@id/editWidth"
                android:layout_marginBottom="8dp"
                />

            <EditText
                android:id="@+id/editWidth"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Example: 16, 32, 64"
                android:inputType="number"
                android:digits="0123456789"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bApplyWidth"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:text="Apply"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editWidth"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#4A673AB7"
        app:cardElevation="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewWidth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <TextView
                android:id="@+id/text_change_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type height of your matrix"
                android:textAlignment="center"
                android:textSize="40sp"
                app:layout_constraintBottom_toTopOf="@id/editWidth"
                android:layout_marginBottom="8dp"
                />

            <EditText
                android:id="@+id/editHeight"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Example: 16, 32, 64"
                android:inputType="number"
                android:digits="0123456789"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/bApplyHeight"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:text="Apply"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editWidth"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>