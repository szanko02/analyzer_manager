<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.color.ColorFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewColor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#4A673AB7"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_changecolor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_color1"
                android:textAlignment="center"
                android:textSize="25dp"

                />
            <SeekBar
                android:layout_marginTop="10dp"
                android:paddingTop="4dp"
                android:id="@+id/RSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"
                android:progress="100"
                android:progressTint="#FF0000"
                android:thumbTint="@color/white"
                style="@style/SeekBarStyle" />
            <SeekBar
                android:layout_marginTop="10dp"
                android:paddingTop="4dp"
                android:id="@+id/GSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"
                android:progress="100"
                android:progressTint="#4CAF50"
                android:thumbTint="@color/white"
                style="@style/SeekBarStyle" />
            <SeekBar
                android:layout_marginTop="10dp"
                android:paddingTop="4dp"
                android:id="@+id/BSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"
                android:progress="100"
                android:progressTint="#03A9F4"
                android:thumbTint="@color/white"
                style="@style/SeekBarStyle" />
            <Button
                android:id="@+id/bApplyColor1"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="COLOR 1"
                android:layout_marginTop="8dp"></Button>
            <Button
                android:backgroundTint="@android:color/holo_blue_bright"
                android:id="@+id/bApplyColor2"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="COLOR 2"
                android:layout_marginTop="8dp"/>
            <Button
                android:backgroundTint="@android:color/holo_green_light"
                android:id="@+id/bApplyColor3"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="COLOR 3"
                android:layout_marginTop="8dp"/>
            <Button
                android:backgroundTint="@android:color/holo_purple"
                android:id="@+id/bApplyColor4"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="COLOR 4"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>